@model EntityLayer.Concrete.Stock
@{
    ViewData["Title"] = "StockAdd";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}

@using (Html.BeginForm("StockAdd", "Admin", FormMethod.Post))
{
    @Html.Label("Stok Adı")
    @Html.TextBoxFor(x => x.StockName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.StockName)
    <br />
    <br />
    @Html.Label("Stok Kodu")
    @Html.TextBoxFor(x => x.StockCode, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.StockCode)
    <br />
    <br />
    @Html.Label("Stok Tarihi")
    @Html.TextBoxFor(x => x.Registerdate, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Registerdate)
    <br />
    <br />
    @Html.Label("Stock Görsel")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ImageUrl)
    <br />
    <br />
    @Html.Label("Ürün Açıklaması")
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Stock Fiyatı")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("KDV")
    @Html.TextBoxFor(x => x.KDV, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-info" type="submit">Kaydet</button>
}


