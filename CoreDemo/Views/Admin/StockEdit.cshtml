@model EntityLayer.Concrete.Stock
@{
    ViewData["Title"] = "StockEdit";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}

<h1>EditStock</h1>
@using (Html.BeginForm("StockEdit", "Admin", FormMethod.Post))
{
    @Html.Label("Stok Adı")
    @Html.TextBoxFor(x => x.StockName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.StockName)
    <br />
    <br />
    @Html.Label("Stok Kodu")
    @Html.TextBoxFor(x => x.StockCode, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.StockCode)
    <br />
    <br />
    @Html.Label("Stock Görsel")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ImageUrl)
    <br />
    <br />
    @Html.Label("Ürün Açıklaması")
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Stock Fiyatı")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("KDV")
    @Html.TextBoxFor(x => x.KDV, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Ürün")
    @Html.DropDownListFor(x => x.StockID, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })
    <br />

    <br />
    <button class="btn btn-success">Güncelle</button>

}